<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false"><shape>
        <gradient android:angle="270" android:endColor="#40DEDEDE" android:startColor="#2F000000" />

        <corners android:radius="1dp" />

        <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
    </shape></item>
    <item android:state_pressed="true"><shape>
        <gradient android:angle="270" android:endColor="#40DEDEDE" android:startColor="#2F000000" />

        <corners android:radius="1dp" />

        <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
    </shape></item>
    <item><shape>
        <gradient android:angle="180" android:endColor="#40DEDEDE" android:startColor="#2F000000" />

        <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />

        <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
    </shape></item>
</selector>